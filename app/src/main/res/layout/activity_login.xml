<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vuforia.samples.VuforiaSamples.LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/hereiam_login">

    <TextView
        android:text="hereiam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="50sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtUsername"
        android:hint="请输入您的用户名"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:textColorHint="@color/white"
/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/edtPassword"
        android:hint="请输入您的密码"
        android:layout_below="@+id/edtUsername"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:textColorHint="#ffffff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="确定"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnConfig"
            android:onClick="config"
            android:textColor="#ffffff"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/holo_blue_dark" />

        <Button
            android:text="去注册！"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnRigister"
            android:onClick="rigister"
            android:background="@android:color/transparent"
            android:layout_gravity="bottom"
            android:textColor="@android:color/holo_blue_bright"
            android:textAlignment="textStart"
            android:layout_marginEnd="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView5" />

        <TextView
            android:text="还没有hereiam账号？"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>
